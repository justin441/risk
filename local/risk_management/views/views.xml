<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--views-->

        <!--Process form view-->
        <record model="ir.ui.view" id="process_form_view">
            <field name="name">process.form</field>
            <field name="model">risk_management.process</field>
            <field name="arch" type="xml">
                <form string="Process form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="process_type"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="responsible_id"/>
                        </group>
                        <notebook>
                            <page string="Input">
                                <field name="input_data_ids"/>
                            </page>
                            <page string="Output">
                                <field name="output_data_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="process_list_view">
            <field name="name">process.tree</field>
            <field name="model">risk_management.process</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="responsible_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="process_search_view">
            <field name="name">process.search</field>
            <field name="model">risk_management.process</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <!-- TODO: add one or more filter -->
                </search>
            </field>
        </record>

        <!--process list view-->
        <record model="ir.ui.view" id="process_data_form">
            <field name="name">process_data.form</field>
            <field name="model">risk_management.process_data</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="int_provider_id"/>
                            <field name="ext_provider_cat_id"/>
                        </group>
                        <notebook>
                            <page string="Consumers">
                                <field name="consumer_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--actions-->
        <record model="ir.actions.act_window" id="process_list_action">
            <field name="name">Processes</field>
            <field name="res_model">risk_management.process</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first Process!</p>
            </field>
        </record>

        <!--top level menu-->
        <menuitem id="main_risk_management_menu" name="Risk Management"/>

        <!--menu items-->
        <menuitem id="process_menu" name="Processes" parent="main_risk_management_menu" action="process_list_action"/>
    </data>
</odoo>