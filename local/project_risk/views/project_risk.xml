<odoo>
    <data>
        <!-- PROJECT RISK EVALUATION -->

        <record model="ir.ui.view" id="view_project_risk_evaluation_list">
            <field name="name">project_risk.evaluation.tree</field>
            <field name="model">project_risk.evaluation</field>
            <field name="inherit_id" ref="risk_management.view_business_risk_evaluation_list"/>
            <field name="arch" type="xml">
                <field name="business_risk_id" position="replace">
                    <field name="project_risk_id" invisible="context.get('search_default_project_risk_id', False)"/>
                </field>
                <field name="risk_type" position="attributes">
                    <attribute name="invisible" eval="context.get('search_default_project_risk_id', False)"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_project_risk_eval_graph">
            <field name="name">project_risk.evaluation.graph</field>
            <field name="model">project_risk.evaluation</field>
            <field name="inherit_id" ref="risk_management.view_business_risk_eval_graph"/>
            <field name="arch" type="xml">
                <field name="business_risk_id" position="replace">
                    <field name="project_risk_id"/>
                </field>

            </field>
        </record>

        <record model="ir.actions.act_window" id="act_project_risk_evaluation">
            <field name="name">Project Risk Evaluation</field>
            <field name="res_model">project_risk.evaluation</field>
            <field name="view_mode">tree,graph</field>
        </record>

        <!-- PROJECT RISK-->

        <record id="view_project_risk_search" model="ir.ui.view">
            <field name="name">project_risk.search</field>
            <field name="model">project_risk.project_risk</field>
            <field name="inherit_id" ref="risk_management.view_business_risk_search"/>
            <field name="arch" type="xml">
                <field name="business_process_id" position="replace">
                    <field name="project_id"/>
                </field>
                <xpath expr="//filter[@name='Process']" position="replace">
                    <filter string="Project" name="Project" context="{'group_by': 'project_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_tree_project_risk_activity" model="ir.ui.view">
            <field name="name">project_risk.tree.activity</field>
            <field name="model">project_risk.project_risk</field>
            <field name="inherit_id" ref="risk_management.view_tree_business_risk_activity"/>
            <field name="arch" type="xml">
                <field name="business_process_id" position="replace">
                    <field name="project_id"/>
                </field>
            </field>
        </record>

        <record id="view_project_risk_list" model="ir.ui.view">
            <field name="name">project_risk.tree</field>
            <field name="model">project_risk.project_risk</field>
            <field name="inherit_id" ref="risk_management.view_business_risk_tree"/>
            <field name="arch" type="xml">
                <field name="business_process_id" position="replace">
                    <field name="project_id" invisible="context.get('search_default_project_id', False)"/>
                </field>
            </field>
        </record>

        <record id="view_project_risk_calendar" model="ir.ui.view">
            <field name="name">project_risk.calendar</field>
            <field name="model">project_risk.project_risk</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar date_start="review_date" string="Risks" mode="month" color="project_id">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <record id="view_project_risk_kanban" model="ir.ui.view">
            <field name="name">project_risk.kanban</field>
            <field name="model">risk_management.project_risk</field>
            <field name="inherit_id" ref="risk_management.view_business_risk_kanban"/>
            <field name="arch" type="xml">
                <field name="business_process_id" position="replace">
                    <field name="project_id"/>
                </field>
                <xpath expr="//small[hasclass('o_kanban_record_subtitle')]/field[@name='business_process_id']"
                       position="replace">
                    <field name="project_id" invisible="context.get('default_project_id', False)"/>
                </xpath>
            </field>
        </record>

        <record id="act_project_risk_activity" model="ir.actions.act_window">
            <field name="name">Risk activities</field>
            <field name="res_model">project_risk.project_risk</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban,calendar</field>
            <field name="view_id" ref="view_tree_project_risk_activity"/>
            <field name="context">{'search_default_activities_my':1}</field>
            <field name="domain">[('activity_date_deadline', '!=', False)]</field>
            <field name="help" type="html">
                <p>
                    Currently there are not any activity scheduled.
                </p>
            </field>
        </record>

        <record id="view_project_risk_edit" model="ir.ui.view">
            <field name="name">project_risk.form</field>
            <field name="model">project_risk.project_risk</field>
            <field name="inherit_id" ref="risk_management.view_business_risk_edit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='assign_to_me']" position="attributes">
                    <attribute name="groups" eval="project_risk.group_risk_manager"/>
                </xpath>
                <xpath expr="//header/button[2]" position="replace">
                    <button name="%(project_risk.act_set_project_risk_threshold_wizard)d"
                            type="action"
                            class="btn-primary" groups="project.group_project_manager"
                            string="Set Threshold"/>
                </xpath>
                <xpath expr="//header/button[3]" position="replace">
                    <button name="%(project_risk.act_eval_project_risk_wizard)d"
                            type="action"
                            class="btn-danger" groups="project_risk.group_risk_manager"
                            string="Evaluation"
                            attrs="{'invisible' : [('is_confirmed', '=', False)]}"/>
                </xpath>
                <field name="business_process_id" position="replace">
                    <field name="project_id"
                           invisible="context.get('default_project_id', False)"
                    />
                </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_project_risk_reg">
            <field name="name">Risk Register</field>
            <field name="res_model">project_risk.project_risk</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="view_project_risk_list"/>
            <field name="context"
                   eval="{'search_default_evaluated':1,, 'form_view_ref': 'project_risk.view_project_risk_edit'}"/>
            <field name="search_view_id" ref="view_project_risk_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent">
                    There is no risk in this risk register at the moment.
                </p>
            </field>
        </record>

        <menuitem name="Risks management" id="project_risk_management" parent="project.menu_main_pm" sequence="3"/>
        <menuitem name="Risk Register" id="menu_project_risk_register" parent="project_risk_management"
                  action="act_project_risk_reg" sequence="10"/>
        <menuitem action="act_project_risk_activity" id="menu_project_risk_activity" parent="project_risk_management"
                  sequence="30"/>

        <!-- project form-->
        <record model="ir.ui.view" id="project_form">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/button[2]" position="after">
                    <button class="oe_stat_button" type="action"
                            name="%(project_risk.act_project_risk_reg)d"
                            icon="fa-exclamation-circle"
                            context="{'search_default_project_id': [active_id], 'default_project_id': active_id}"
                    >
                        <field string="Risks" name="risk_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>