<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="project_risk_comp_rule" model="ir.rule">
            <field name="name">Project risk: multi-company</field>
            <field name="model_id" ref="model_project_risk_project_risk"/>
            <field name="domain_force">
                ['|', ('project_id.company_id', '=', False),
                      ('project_id.company_id', 'child_of', [user.company_id.id]),
                                    ]
            </field>
            <field name="global" eval="True"/>
        </record>

        <record id="project_risk_eval_comp_rule" model="ir.rule">
            <field name="name">Project risk evaluation: multi-company</field>
            <field name="model_id" ref="model_project_risk_evaluation"/>
            <field name="domain_force">
                ['|', ('project_risk_id.project_id.company_id', '=', False),
                      ('project_risk_id.project_id.company_id', 'child_of', [user.company_id.id]),
                                    ]
            </field>
            <field name="global" eval="True"/>
        </record>

        <record id="project_risk_change_rule" model="ir.rule">
            <field name="name">Change Project Risk</field>
            <field name="model_id" ref="model_project_risk_project_risk"/>
            <field name="domain_force">[('write_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_read" eval="False"/>
        </record>

        <record id="project_risk_change_risk_manager_rule" model="ir.rule">
            <field name="name">Change Project Risk: Risk managers</field>
            <field name="model_id" ref="model_project_risk_project_risk"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('risk_management.group_risk_manager'))]"/>
        </record>
    </data>
</odoo>